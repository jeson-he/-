#include<stdio.h>
int CountWords(char str[])
{
	
	int i, sum;
	if (str[0] != ' ')
	sum = 1;
	else
		sum = 0;
	for (i = 1; str[i] != '\0'; i++)
	{
		if (str[i ] != ' '&&str[i-1] == ' ')
		{
			sum++;
		}
	}
	return sum;
}
int main()
{
	char str[80];
	int num ;
	printf("Input a string:\n");
		gets(str);
	num = CountWords(str);
	printf("Number of words=%d\n",num);
	return 0;
}
